<Application
    x:Class="SBC.WPF.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedThemeVariant="Default">
    <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

    <Application.Styles>
        <FluentTheme />
		
        <StyleInclude Source="Resources/Styles/ButtonStyles.axaml" />
        <StyleInclude Source="Resources/Styles/CheckBoxStyles.axaml" />
        <StyleInclude Source="avares://SBC.WPF/Resources/Styles/ComboBoxStyles.axaml" />
		<StyleInclude Source="avares://SBC.WPF/Resources/Styles/TextBoxStyles.axaml" />
		<StyleInclude Source="avares://SBC.WPF/Resources/Styles/TextBlockStyles.axaml" />
        <StyleInclude Source="avares://SBC.WPF/Resources/Styles/ButtonFlyoutMenuItemsStyles.axaml" />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Resources/ResourceDictionary/Icons.axaml" />
                <ResourceInclude Source="/Resources/ResourceDictionary/Styles.axaml" />
                <ResourceInclude Source="/Resources/ResourceDictionary/LightTheme.axaml" />
                <ResourceInclude Source="/Resources/ResourceDictionary/ScrollBar.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>