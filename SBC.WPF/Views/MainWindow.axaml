<Window
    x:Class="SBC.WPF.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:BooleanConverters="clr-namespace:Avalonia.Data.Converters;assembly=Avalonia.Base"
    xmlns:avaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
    xmlns:converters="using:SBC.WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:SBC.WPF.Models"
    xmlns:vm="using:SBC.WPF.ViewModels"
    Title="SBC.WPF"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:MainWindowViewModel"
    ExtendClientAreaChromeHints="NoChrome"
    ExtendClientAreaTitleBarHeightHint="-1"
    ExtendClientAreaToDecorationsHint="True"
    Icon="/Assets/avalonia-logo.ico"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>

        <!--  Title/Logo, Minimize, Maximize, Cross Custom btn  -->
        <Border
            Grid.ColumnSpan="2"
            VerticalAlignment="Center"
            Background="{StaticResource HeaderBrush}"
            PointerPressed="TitleBar_PointerPressed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <Image
                    Grid.Column="0"
                    Margin="0,3"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Source="{StaticResource icons_LFT_logoDrawingImage}" />

                <!--  Title  -->
                <TextBlock
                    Grid.Column="1"
                    Margin="10,0"
                    VerticalAlignment="Center"
                    FontFamily="Montserrat"
                    FontSize="16"
                    Foreground="White"
                    Text="Single Board Computer Test Application" />

                <!--  Minimize Btn  -->
                <Button
                    Grid.Column="2"
                    Width="14"
                    Height="14"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="MinimizeButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid Background="Transparent">
                                <Image
                                    Width="14"
                                    Height="14"
                                    Source="{StaticResource icons_MinimizeDrawingImage}" />
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


                <!--  Maximize Btn  -->
                <Button
                    x:Name="MaximizeButton"
                    Grid.Column="3"
                    Width="14"
                    Height="14"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="MaximizeButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid Background="Transparent">
                                <Image
                                    x:Name="RestoreIcon"
                                    Width="14"
                                    Height="14"
                                    Source="{StaticResource icons_MaximiseDrawingImage}" />
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!--  Close Bt  -->
                <Button
                    Grid.Column="4"
                    Width="14"
                    Height="14"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="CloseButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid Background="Transparent">
                                <!--  Close Icon: Cross  -->
                                <Image
                                    Width="14"
                                    Height="14"
                                    Source="{StaticResource icons_Close_VectorDrawingImage}" />
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!--  Left Panel navigation  -->
        <Border Grid.Row="1" Background="#F1F1F1">
            <Grid>
                <ListBox
                    Margin="5,10,7,5"
                    Background="Transparent"
                    ItemTemplate="{StaticResource NavItemTemplate}"
                    ItemsSource="{Binding TestGroups}"
                    SelectedItem="{Binding SelectedTestGroup}">
                    <ListBox.Styles>
                        <!--  Base Style  -->
                        <Style Selector="ListBoxItem">
                            <Setter Property="Padding" Value="10,6" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Setter Property="MinHeight" Value="32" />
                            <Setter Property="HorizontalContentAlignment" Value="Left" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Setter Property="Template">
                                <ControlTemplate>
                                    <Border
                                        Name="PART_Border"
                                        Padding="{TemplateBinding Padding}"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="6">
                                        <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" />
                                    </Border>
                                </ControlTemplate>
                            </Setter>
                        </Style>

                        <!--  Hover Style  -->
                        <Style Selector="ListBoxItem:pointerover">
                            <Setter Property="Foreground" Value="{StaticResource ButtonBackgroundColor}" />
                        </Style>

                        <!--  Selected Style  -->
                        <Style Selector="ListBoxItem:selected">
                            <Setter Property="Background" Value="{StaticResource ButtonBackgroundColor}" />
                            <Setter Property="Foreground" Value="White" />
                        </Style>
                    </ListBox.Styles>
                </ListBox>
            </Grid>
        </Border>

        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,10,0,0"
            RowDefinitions="*, Auto">

            <!--  Tab Content + Logs  -->
            <Grid
                Margin="10,0"
                ColumnDefinitions="2*,3*"
                RowDefinitions="*,Auto">

                <ContentControl DataContext="{Binding SelectedTestGroup}">
                    <Grid RowDefinitions="Auto,*">
                        <!--  Header  -->
                        <Grid Grid.Row="0" ColumnDefinitions="*,Auto, Auto">
                            <CheckBox
                                VerticalAlignment="Center"
                                BorderBrush="Black"
                                Click="IsAllSelected_Click"
                                Content="Test Cases"
                                FontWeight="Medium"
                                IsChecked="{Binding IsAllSelected, Mode=TwoWay}"
                                IsThreeState="True" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="0,0,22,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontWeight="Medium"
                                Text="Status" />
                        </Grid>

                        <!--  Test List  -->
                        <ScrollViewer
                            Grid.Row="1"
                            MinHeight="100"
                            VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Testcases}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type models:TestCase}">
                                        <Grid Margin="0,5,0,0" ColumnDefinitions="*, Auto, Auto">
                                            <CheckBox
                                                Margin="0,10,10,0"
                                                BorderBrush="Black"
                                                Content="{Binding Name}"
                                                IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                            <Ellipse
                                                Grid.Column="1"
                                                Width="14"
                                                Height="14"
                                                Margin="0,0,15,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Fill="{Binding StatusColor}"
                                                Stroke="Black"
                                                StrokeThickness="0" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </ContentControl>

                <!--  Logs  -->
                <Border
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    Padding="10"
                    Background="Black"
                    BorderBrush="Gray"
                    BorderThickness="1">

                    <ScrollViewer x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding LogLines}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Margin="0,1,0,1"
                                        Background="Black"
                                        FontFamily="Consolas"
                                        FontSize="14"
                                        Foreground="{Binding Color}"
                                        Text="{Binding Message}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>

            <Grid Grid.Row="1" ColumnDefinitions="2*, 3*">
                <TextBlock
                    Margin="10,10,0,10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontWeight="Medium"
                    Text="Iterations" />

                <NumericUpDown
                    Margin="80,0,10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Increment="1"
                    Maximum="100"
                    Minimum="0"
                    ParsingNumberStyle="Integer"
                    Value="{Binding SelectedIteration}" />

                <Button
                    HorizontalAlignment="Right"
                    Command="{Binding RunTestCommand}"
                    Content="Run" />

                <StackPanel
                    Grid.Column="1"
                    Margin="10,10,0,10"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button Click="ExportLogs_Click" Content="Export" />
                    <Button
                        Margin="10,10,0,10"
                        Command="{Binding ClearLogsCommand}"
                        Content="Clear" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>

</Window>
