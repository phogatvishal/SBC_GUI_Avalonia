<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:ClassModifier="internal">

	<ControlTheme x:Key="FluentScrollBarThumb" TargetType="Thumb">
		<Setter Property="Background" Value="{DynamicResource ThemeColor}" />
		<Setter Property="CornerRadius" Value="4" />
		<Setter Property="Width" Value="7" />
		<Setter Property="MinHeight" Value="30" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Border Background="{TemplateBinding Background}"
                            CornerRadius="{TemplateBinding CornerRadius}" />
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Setter Property="Transitions">
			<Transitions>
				<CornerRadiusTransition Property="CornerRadius" Duration="0:0:0.1" />
			</Transitions>
		</Setter>
	</ControlTheme>

	<ControlTheme x:Key="FluentScrollBarPageButton" TargetType="RepeatButton">
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="VerticalAlignment" Value="Stretch" />
		<Setter Property="HorizontalAlignment" Value="Stretch" />
		<Setter Property="Opacity" Value="0" />
		<Setter Property="Template">
			<ControlTemplate>
				<Border Background="{TemplateBinding Background}" />
			</ControlTemplate>
		</Setter>
	</ControlTheme>

	<ControlTheme x:Key="FluentScrollBarLineButton" TargetType="RepeatButton">
		<Setter Property="Opacity" Value="0" />
		<Setter Property="Template">
			<ControlTemplate>
				<ContentPresenter />
			</ControlTemplate>
		</Setter>
	</ControlTheme>

	<ControlTheme x:Key="{x:Type ScrollBar}" TargetType="ScrollBar">
		<Setter Property="MinWidth" Value="7" />
		<Setter Property="MinHeight" Value="15" />
		<Setter Property="Background" Value="{DynamicResource ScrollBarBackground}" />
		<Setter Property="Foreground" Value="{DynamicResource ScrollBarForeground}" />
		<Setter Property="BorderBrush" Value="{DynamicResource ScrollBarBorderBrush}" />

		<!-- Vertical ScrollBar -->
		<Style Selector="^:vertical">
			<Setter Property="Template">
				<ControlTemplate>
					<Grid>
						<Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}">
							<Grid RowDefinitions="Auto,*,Auto">
								<!-- Line Up -->
								<RepeatButton Name="PART_LineUpButton"
                                              Theme="{StaticResource FluentScrollBarLineButton}"
                                              Grid.Row="0"
                                              Focusable="False"
                                              MinHeight="0"
                                              Height="0" />

								<!-- Track with Thumb -->
								<Grid Grid.Row="1">
									<Rectangle Fill="{DynamicResource ScrollBackgroundBrush}" RadiusX="4" RadiusY="4"/>
									<Track Minimum="{TemplateBinding Minimum}"
										   Maximum="{TemplateBinding Maximum}"
										   Value="{TemplateBinding Value, Mode=TwoWay}"
										   ViewportSize="{TemplateBinding ViewportSize}"
										   Orientation="{TemplateBinding Orientation}"
										   IsDirectionReversed="True">
										<Track.DecreaseButton>
											<RepeatButton Theme="{StaticResource FluentScrollBarPageButton}" Focusable="False" />
										</Track.DecreaseButton>
										<Track.IncreaseButton>
											<RepeatButton Theme="{StaticResource FluentScrollBarPageButton}" Focusable="False" />
										</Track.IncreaseButton>
										<Thumb Theme="{StaticResource FluentScrollBarThumb}" RenderTransform="none" />
									</Track>
								</Grid>

								<!-- Line Down -->
								<RepeatButton Name="PART_LineDownButton"
                                              Theme="{StaticResource FluentScrollBarLineButton}"
                                              Grid.Row="2"
                                              Focusable="False"
                                              MinHeight="0"
                                              Height="0" />
							</Grid>
						</Border>
					</Grid>
				</ControlTemplate>
			</Setter>
		</Style>

		<!-- Horizontal ScrollBar -->
		<Style Selector="^:horizontal">
			<Setter Property="Template">
				<ControlTemplate>
					<Grid>
						<Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}">
							<Grid ColumnDefinitions="Auto,*,Auto">
								<!-- Line Left -->
								<RepeatButton Name="PART_LineUpButton"
                                              Theme="{StaticResource FluentScrollBarLineButton}"
                                              Grid.Column="0"
                                              Focusable="False"
                                              MinWidth="0"
                                              Width="0" />

								<!-- Track with Thumb -->
								<Grid Grid.Column="1">
									<Rectangle Fill="{DynamicResource ScrollBackgroundBrush}" RadiusX="4" RadiusY="4"/>
									<Track Minimum="{TemplateBinding Minimum}"
										   Maximum="{TemplateBinding Maximum}"
										   Value="{TemplateBinding Value, Mode=TwoWay}"
										   ViewportSize="{TemplateBinding ViewportSize}"
										   Orientation="{TemplateBinding Orientation}"
										   IsDirectionReversed="True">
										<Track.DecreaseButton>
											<RepeatButton Theme="{StaticResource FluentScrollBarPageButton}" Focusable="False" />
										</Track.DecreaseButton>
										<Track.IncreaseButton>
											<RepeatButton Theme="{StaticResource FluentScrollBarPageButton}" Focusable="False" />
										</Track.IncreaseButton>
										<Thumb Theme="{StaticResource FluentScrollBarThumb}" RenderTransform="none" />
									</Track>
								</Grid>

								<!-- Line Right -->
								<RepeatButton Name="PART_LineDownButton"
                                              Theme="{StaticResource FluentScrollBarLineButton}"
                                              Grid.Column="2"
                                              Focusable="False"
                                              MinWidth="0"
                                              Width="0" />
							</Grid>
						</Border>
					</Grid>
				</ControlTemplate>
			</Setter>
		</Style>
	</ControlTheme>
</ResourceDictionary>
